{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
        "dist",
        "**/*.d.ts"
    ],
    "rules": {
        "no-useless-constructor": "off",
        "@typescript-eslint/ban-ts-comment": "off"
      }
}
